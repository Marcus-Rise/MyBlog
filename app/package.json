{
  "name": "nest-typescript-starter",
  "private": true,
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "dev": "NODE_ENV='development' tsnd -r dotenv/config --ignore-watch src/client/components --ignore-watch src/client/.next --ignore-watch src/client/pages --inspect=0.0.0.0:9229 --project tsconfig.server.json src/server/main.ts",
    "lint": "eslint 'src/**/*.{js,ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{js,ts,tsx}' --fix",
    "test": "jest --collectCoverage=true",
    "test:watch": "jest --watch",
    "build:clean": "rimraf src/client/.next && rimraf dist",
    "build:client": "next build ./src/client",
    "build:server": "tsc -p tsconfig.server.json",
    "build": "npm run build:clean && npm run build:client && npm run build:server",
    "start": "cross-env NODE_ENV=production node dist/server/main.js"
  },
  "dependencies": {
    "@nestjs/common": "^7.4.2",
    "@nestjs/core": "^7.4.2",
    "@nestjs/platform-express": "^7.4.2",
    "bootstrap": "^4.5.2",
    "cache-manager": "^3.3.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "date-fns": "^2.15.0",
    "helmet": "^4.0.0",
    "morgan": "^1.10.0",
    "nest-next": "^9.2.0",
    "next": "^9.5.2",
    "next-seo": "^4.7.3",
    "prismic-javascript": "^3.0.2",
    "prismic-reactjs": "^1.3.2",
    "react": "^16.13.1",
    "react-bootstrap": "^1.3.0",
    "react-dom": "^16.13.1",
    "react-gist": "^1.2.2",
    "react-icons": "^3.11.0",
    "react-markdown": "^4.3.1",
    "reflect-metadata": "^0.1.13",
    "roboto-fontface": "^0.10.0",
    "rxjs": "^6.6.2",
    "sass": "^1.26.10"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.4.1",
    "@nestjs/schematics": "^7.0.1",
    "@nestjs/testing": "^7.4.2",
    "@svgr/webpack": "^5.4.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.7",
    "@types/csurf": "^1.9.36",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.10",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.27",
    "@types/react": "^16.9.46",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-react": "^7.20.6",
    "jest": "^26.4.0",
    "next-pwa": "^3.1.3",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.2.0",
    "ts-loader": "^8.0.2",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.57",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.7",
    "url-loader": "^4.1.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
